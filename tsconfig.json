{
  "compilerOptions": {
    "target": "ES2016",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node"
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}